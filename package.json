{
  "name": "validation-framework",
  "version": "1.0.1",
  "main": "dist/bundle.cjs",
  "module": "dist/bundle.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "update": "npm run lint && npm run prettier-format && npm run type-check && npm run build",
    "type-check": "tsc --noEmit",
    "prettier-format": "prettier --config .prettierrc.json \"src/**/*.{js,ts}\" --write",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "test": "jest",
    "clean": "rimraf dist"
  },
  "keywords": [
    "validation",
    "framework",
    "validator"
  ],
  "description": "A modular and extensible JavaScript validation framework",
  "author": "Anh-Nam-Nhan-Huy",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "postcss": "^8.4.49",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "peerDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NhanHoPeter217/validation-framework.git"
